<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebackground"
    tools:context=".Game">

    <TableLayout
        android:id="@+id/game_table"
        android:layout_width="284dp"
        android:layout_height="382dp"
        android:background="@drawable/tictactoeboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">

            <ImageView
                android:id="@+id/iv_11"
                android:layout_margin="3dp"
                android:layout_width="84dp"
                android:layout_height="120dp"
                android:onClick="GameBoardClick"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/iv_12"
                android:layout_margin="3dp"
                android:layout_width="93dp"
                android:layout_height="120dp"
                android:onClick="GameBoardClick"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/iv_13"
                android:layout_margin="3dp"
                android:layout_width="84dp"
                android:layout_height="120dp"
                android:onClick="GameBoardClick"
                tools:ignore="OnClick" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/iv_21"
                android:layout_margin="2dp"
                android:layout_width="87dp"
                android:layout_height="120dp"
                android:onClick="GameBoardClick"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/iv_22"
                android:layout_width="97dp"
                android:layout_height="126dp"
                android:layout_margin="3dp"
                android:onClick="GameBoardClick"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/iv_23"
                android:layout_margin="3dp"
                android:layout_width="84dp"
                android:layout_height="120dp"
                android:onClick="GameBoardClick"
                tools:ignore="OnClick" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/iv_31"
                android:layout_width="84dp"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:onClick="GameBoardClick"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/iv_32"
                android:layout_margin="3dp"
                android:layout_width="88dp"
                android:layout_height="115dp"
                android:onClick="GameBoardClick"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/iv_33"
                android:layout_width="84dp"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:onClick="GameBoardClick"
                tools:ignore="OnClick" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/winner1_message"
        android:layout_width="319dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="Player 1 is the winner"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948" />

    <TextView
        android:id="@+id/winner2_message"
        android:layout_width="319dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="Player 2 is the winner"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948" />

    <TextView
        android:id="@+id/draw_message"
        android:layout_width="319dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="It is a Draw"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="21dp"
        android:text="Exit"
        android:backgroundTint="@android:color/holo_orange_light"
        android:textColor="@color/black"
        android:visibility="invisible"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/winner1_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_table" />

    <TextView
        android:id="@+id/player_1"
        android:layout_width="114dp"
        android:layout_height="37dp"
        android:text="Player 1"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/player_2"
        android:layout_width="114dp"
        android:layout_height="37dp"
        android:text="Player 2"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="25dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/player_1_name"
        android:layout_width="151dp"
        android:layout_height="65dp"
        android:text="Player 1 name"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094" />

    <TextView
        android:id="@+id/player_2_name"
        android:layout_width="189dp"
        android:layout_height="65dp"
        android:text="Player 2 name"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />


</androidx.constraintlayout.widget.ConstraintLayout>